#:kivy 2.3.0

<PongBall>:
    size: 20, 20
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 15, 100
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player: player_paddle
    computer: computer_paddle
    
    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 0.3
        Line:
            points: [self.center_x, 0, self.center_x, self.height]
            width: 2
    
    Label:
        font_size: 40
        center_x: root.width / 4
        top: root.top - 30
        text: str(root.player.score)
        color: 1, 0.2, 0.2, 1
    
    Label:
        font_size: 40
        center_x: root.width * 3 / 4
        top: root.top - 30
        text: str(root.computer.score)
        color: 1, 0.4, 0.6, 1
    
    PongBall:
        id: pong_ball
        center: self.parent.center
    
    PongPaddle:
        id: player_paddle
        x: root.x + 20
        center_y: root.center_y
    
    PongPaddle:
        id: computer_paddle
        x: root.width - self.width - 20
        center_y: root.center_y
